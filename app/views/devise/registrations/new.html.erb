<!-- experiment -->
<div class="container anchor" id="sainap">
  <div class="sainapz">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email do %><!--br /-->
        <%= f.email_field :email,placeholder: "Email address", class: "form-control theclass"  %>
      <% end %>
    </div>

    <div class="form-group" id="paswan">
      <%= f.label :password do %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      <%= f.password_field :password, placeholder: "Password", class: "form-control theclass" %>
      <% end %>
    </div>

    <div class="form-group" id="pastu">
      <%= f.label :password_confirmation do %><br />
      <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control theclass" %>
      <% end %>
    </div>

    <div class="actions sainapblue">
      <%= f.submit value: "Sign up", class: "btn btn-lg btn-primary btn-block theclass" %>
    </div>

  <% end %>
    <div class="sainaplinks">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>



